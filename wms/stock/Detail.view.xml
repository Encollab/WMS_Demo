<mvc:View controllerName="yelcho.wmsdemo.stock.Detail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic">
    <semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="{device>/system/phone}" title="{i18n>stockDetailTitle}" busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
        <semantic:content>
            <ObjectHeader responsive="true" fullScreenOptimized="false" title="{stockId}">
                <attributes>
                    <ObjectAttribute title="{/#stock/Warehouse/@sap:label}" text="{Warehouse}" />
                    <ObjectAttribute title="{/#stock/StorageType/@sap:label}" text="{StorageType}" />
                    <ObjectAttribute title="{/#stock/StorageLocation/@sap:label}" text="{StorageLocation}" />
                    <ObjectAttribute title="{/#stock/Section/@sap:label}" text="{Section}" />
                    <ObjectAttribute title="{/#stock/PickingArea/@sap:label}" text="{PickingArea}" visible="{= ${PickingArea} !== ''}" />
                </attributes>
                <statuses>
                    <ObjectStatus title="{/#stock/BlockReason/@sap:label}" text="{BlockReason}" state="Error" visible="{= ${BlockReason} !== ''}"/>
                </statuses>
            </ObjectHeader>
            <IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter text="{i18n>binsIconTabBarText}" icon="sap-icon://folder" tooltip="{i18n>binsIconTabBarInfo}">
                        <Table id="binItemsList" width="auto" items="{Bins}" updateFinished="onBinsUpdateFinished" noDataText="{i18n>binLineItemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">
                            <headerToolbar>
                                <Toolbar id="lineItemsToolbar">
                                    <Title id="lineItemsHeader" text="{detailView>/binsItemListTitle}" />
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="{/#Quant/MaterialId/@sap:label}" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                                    <Text text="{/#Quant/TotalStock/@sap:label}" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                                    <Text text="{/#Quant/AvailableStock/@sap:label}" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier title="{Material}" text="{MaterialId}" />
                                        <ObjectNumber number="{
									path: 'TotalStock',
									formatter: '.formatter.Number'
								}" unit="{BaseUoM}" />
                                        <ObjectNumber number="{
									path: 'AvailableStock',
									formatter: '.formatter.Number'
								}" unit="{BaseUoM}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </semantic:content>
    </semantic:FullscreenPage>
</mvc:View>